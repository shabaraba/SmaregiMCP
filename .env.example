# スマレジMCPサーバー環境設定

# デバッグモード (true/false)
DEBUG=false

# サーバー設定
SERVER_NAME=smaregi
SERVER_VERSION=1.0.0

# データベース設定
# 注意: 相対パスではなく絶対パスを使用することを推奨します
# DATABASE_PATH=./smaregi-mcp.sqlite      # 相対パス - 動作しない場合があります
DATABASE_PATH=/absolute/path/to/your/smaregi-mcp.sqlite  # 絶対パス - 推奨

# JWT Secret (認証用)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# OpenAPI仕様ファイルのパス（相対パスまたは絶対パス）
OPENAPI_SPEC_PATH=./openapi.yaml
