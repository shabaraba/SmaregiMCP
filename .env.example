# スマレジAPI認証情報
SMAREGI_CLIENT_ID=your_client_id
SMAREGI_CLIENT_SECRET=your_client_secret
SMAREGI_CONTRACT_ID=your_contract_id
SMAREGI_ACCESS_TOKEN_URL=https://id.smaregi.jp/app/token
SMAREGI_API_BASE_URL=https://api.smaregi.jp

# Claude API認証情報
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_API_URL=https://api.anthropic.com/v1

# サーバー設定
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# データベース設定
# 注意: 相対パスではなく絶対パスを使用することを推奨します
# DATABASE_PATH=./smaregi-mcp.sqlite      # 相対パス - 動作しない場合があります
DATABASE_PATH=/absolute/path/to/your/smaregi-mcp.sqlite  # 絶対パス - 推奨

# JWT Secret (認証用)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d
