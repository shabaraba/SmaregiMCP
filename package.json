{
  "name": "smaregi-mcp",
  "version": "1.0.0",
  "description": "Microservice Connection Point for integrating Smaregi POS data with Claude AI",
  "type": "module",
  "scripts": {
    "prebuild": "npm run convert && npm run generate:api:tools",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:exit": "node tests/process-exit.test.js",
    "generate:api:common": " npx openapi-typescript ./openapi/common/openapi.yaml -o ./src/schema/common.d.ts",
    "generate:api:pos": " npx openapi-typescript ./openapi/pos/openapi.yaml -o ./src/schema/pos.d.ts",
    "convert": "npx tsx ./scripts/generate-api-schema-json.ts",
    "generate:api:tools": "npx tsx ./scripts/generate-api-tools-json.js",
    "generate:tools": "node scripts/generate-api-tools.js",
    "mcp:init": "node dist/main.js init",
    "mcp:run": "node dist/main.js run",
    "mcp:help": "node dist/main.js",
    "mcp:dev": "nest start --watch"
  },
  "keywords": [
    "smaregi",
    "claude",
    "api",
    "pos",
    "integration",
    "mcp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "openapi-fetch": "^0.13.5",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.21",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@redocly/cli": "^1.34.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^7.6.1",
    "playwright": "^1.51.1",
    "prettier": "3.5.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.26.1",
    "typescript-json-schema": "^0.65.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
