{
  "name": "smaregi-mcp",
  "version": "1.0.0",
  "description": "Microservice Connection Point for integrating Smaregi POS data with Claude AI",
  "type": "module",
  "scripts": {
    "// ===== 基本ビルドコマンド =====": "",
    "build": "npm run build:node",
    "build:node": "npm run generate-schemas && tsc && npm run copy:static",
    "build:cloudflare": "mkdir -p dist/worker && esbuild src/cloudflare-worker.ts --bundle --outfile=dist/worker/worker.js --format=esm --platform=browser --minify --sourcemap",
    "// ===== 開発・サーバー起動コマンド =====": "",
    "dev:node": "node dist/main.js run",
    "dev:cloudflare": "wrangler dev",
    "preview:cloudflare": "wrangler dev --env preview",
    "deploy:cloudflare": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "// ===== MCP初期化・実行コマンド =====": "",
    "mcp:init": "node dist/main.js init",
    "mcp:run": "node dist/main.js run",
    "// ===== スキーマ生成コマンド =====": "",
    "generate-schemas": "npm run generate:api:common && npm run generate:api:pos && npm run convert && npm run generate:typed-openapi",
    "generate:api:common": "npx openapi-typescript ./openapi/common/openapi.yaml -o ./src/schema/common.d.ts",
    "generate:api:pos": "npx openapi-typescript ./openapi/pos/openapi.yaml -o ./src/schema/pos.d.ts",
    "convert": "npx tsx ./scripts/generate-api-schema-json.ts",
    "generate:typed-openapi": "NODE_OPTIONS=\"--max-old-space-size=8192\" npx typed-openapi ./openapi/pos/openapi.yaml -r zod --output ./src/schema/zod/pos.zod.ts",
    "// ===== ユーティリティコマンド =====": "",
    "copy:static": "mkdir -p dist/server/auth && cp src/server/auth/*.html dist/server/auth/ && mkdir -p dist/schema/converted && cp src/schema/converted/*.json dist/schema/converted/ && node scripts/copy-static-assets.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest"
  },
  "keywords": [
    "smaregi",
    "claude",
    "api",
    "pos",
    "integration",
    "mcp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "openapi-fetch": "^0.13.5",
    "openid-client": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.21",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@cloudflare/workers-types": "^4.20240312.0",
    "@eslint/js": "^9.22.0",
    "@modelcontextprotocol/inspector": "^0.8.1",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@redocly/cli": "^1.34.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "glob": "^11.0.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^7.6.1",
    "playwright": "^1.51.1",
    "prettier": "3.5.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-to-zod": "^3.15.0",
    "tsconfig-paths": "^4.2.0",
    "typed-openapi": "^0.10.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.26.1",
    "typescript-json-schema": "^0.65.1",
    "wrangler": "^3.34.2"
  }
}
